<h1 class="header">Sign Up!</h1>
<%= form_for @user do |f| %>
   <fieldset>
   	<div class="row">
   		<div class="large-6 columns">
		    <%= f.label :username %>
		    <%= f.text_field :username %>
		</div>
	</div>

	<div class="row">
		<div class="large-6 columns">
     		<%= f.label :password %>
     		<%= f.password_field :password %>
     	</div>
     	<div class="large-6 columns">
     		<%= f.label :password_confirmation %>
     		<%= f.password_field :password_confirmation %>
     	</div>
     </div>

     <div class="row">
     	<div class="large-6 columns">
     		<%= f.submit %>
     	</div>
     </div>

   </fieldset>
<% end %>
