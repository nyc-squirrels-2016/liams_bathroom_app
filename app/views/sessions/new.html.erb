<div class="all">
<div class="login-container">
<%= form_tag sessions_path do %>
<fieldset>
  <div class="row">
  	<div class="large-6 columns">
  		<%= label_tag :username %>
  		<%= text_field_tag :username %>
  	</div>
  </div>

  <div class="row">
  	<div class="large-6 columns">
  		<%= label_tag :password %>
  		<%= password_field_tag :password %>
  	</div>
  </div>

  <div class="row">
  	<div class="large-6 columns">
  		<%= submit_tag 'Log in' %>
  	</div>
  </div>

</fieldset>
<% end %>
</div>
</div>